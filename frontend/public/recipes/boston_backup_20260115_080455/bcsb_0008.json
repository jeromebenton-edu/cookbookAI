  "title": "Sponge Cake",
  "category": "Desserts",
  "tags": ["cake", "light"],
  "time": { "prep": "20 min", "cook": "30 min", "total": "50 min" },
  "servings": "1 loaf",
  "ingredients": [
    "4 eggs, separated",
    "1 cup sugar",
    "1 cup flour",
    "1/4 tsp salt",
    "1 tsp lemon juice"
  ],
  "instructions": [
    "Beat egg yolks until thick; gradually add sugar.",
    "Fold in sifted flour and salt alternately with beaten egg whites.",
    "Add lemon juice; pour into an ungreased pan.",
    "Bake slowly at 325F for 30 minutes."
  ],
  "notes": ["Cool upside down to maintain volume."],
